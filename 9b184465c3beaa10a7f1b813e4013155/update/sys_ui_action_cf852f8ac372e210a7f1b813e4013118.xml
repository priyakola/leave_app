        <script><![CDATA[// Get the current record ID
var sysId = current.sys_id;

// Log for debugging
gs.info('=== Rejecting Leave Request ===');
gs.info('Record ID: ' + sysId);
gs.info('Current Status: ' + current.status);

// Create a new GlideRecord to update the record
var gr = new GlideRecord('x_1800027_leve_sys_leave_request');
if (gr.get(sysId)) {
    gs.info('Found record: ' + gr.number);
    
    gr.status = 'declined';
    gr.approval_comments = 'Rejected by ' + gs.getUserName();
    gr.approver = gs.getUserID();
    
    if (gr.update()) {
        gs.info('Status updated to: ' + gr.status);
        gs.addInfoMessage('Leave request rejected successfully');
    } else {
        gs.error('Failed to update status: ' + gr.getLastErrorMessage());
        gs.addErrorMessage('Failed to update status: ' + gr.getLastErrorMessage());
    }
} else {
    gs.error('Could not find leave request record');
    gs.addErrorMessage('Could not find leave request record');
}

action.setRedirectURL(current);]]></script>
